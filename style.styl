*
  box-sizing: border-box

textarea
  display: block
  min-height: 200px
  width: 100%

form
  width: 300px

button, form, input, textarea
  margin-right: 4px
  margin-bottom: 4px

#modal
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  position: absolute
  z-index: 9000
  top: 0

  input[type=file]
    box-sizing: border-box
    padding: 5em 2em
    width: 320px
    height: 180px

  & > *
    background-color: white
    border: 1px solid black
    margin: auto
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

  &.active
    display: block
    width: 100%
    height: 100%
